<?xml version="1.0" encoding="utf-8"?>
<com.facebook.shimmer.ShimmerFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/shimmerLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_2m"
    android:background="@drawable/box_radio_white"
    android:elevation="@dimen/_1m"
    app:angle="cw_270"
    android:paddingBottom="@dimen/_0_5m">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/coverSize"
            android:background="@drawable/box_radio_grey"
            android:minHeight="@dimen/_10m" />


        <FrameLayout
            android:layout_width="@dimen/_20m"
            android:layout_height="@dimen/_2m"
            android:layout_margin="@dimen/_1m"
            android:background="@drawable/skeleton_background" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="@dimen/_0_5m"
            android:layout_marginEnd="@dimen/_2m"
            android:layout_marginStart="@dimen/_2m"
            android:layout_marginTop="@dimen/_0_5m"
            android:background="@color/ms_material_grey_400" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_2m"
            android:layout_margin="@dimen/_1m"
            android:background="@drawable/skeleton_background" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_2m"
            android:layout_margin="@dimen/_1m"
            android:background="@drawable/skeleton_background" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_2m"
            android:layout_margin="@dimen/_1m"
            android:background="@drawable/skeleton_background" />
    </LinearLayout>
</com.facebook.shimmer.ShimmerFrameLayout>