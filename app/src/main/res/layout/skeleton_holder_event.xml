<?xml version="1.0" encoding="utf-8"?>
<io.supercharge.shimmerlayout.ShimmerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/shimmerLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/box_radio_white"
    android:paddingBottom="@dimen/_0_5m"
    app:shimmer_animation_duration="@integer/ms_shimmer_duration"
    app:shimmer_auto_start="true"
    app:shimmer_color="@color/colorWhite_20">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/coverSize"
        android:background="@drawable/box_radio_grey_light"
        android:minHeight="@dimen/_10m" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="@dimen/_20m"
            android:layout_height="@dimen/_2m"
            android:layout_margin="@dimen/_1m"
            android:background="@drawable/skeleton_background" />

        <FrameLayout
            android:layout_width="@dimen/_8m"
            android:layout_height="@dimen/_2m"
            android:layout_margin="@dimen/_1m"
            android:background="@drawable/skeleton_background" />
    </LinearLayout>
</io.supercharge.shimmerlayout.ShimmerLayout>