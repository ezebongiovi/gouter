<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.ActionBar" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <item name="background">@color/colorPrimary</item>
    </style>

    <style name="Event.Description" parent="AppTheme">
        <item name="android:textSize">@dimen/font_size_m</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:lineSpacingExtra">@dimen/_1m</item>
    </style>

</resources>
